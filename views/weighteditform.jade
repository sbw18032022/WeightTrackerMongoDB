include mainnav

block content

 div(id="weightinputformContainer")
  h2 This is the Weight input form.
  
  form(
   name="frmWeight"
   id="frmWeight"
   action="/editweight"
   method="POST"
  )
  
   div
    label(
     for="txtStones"
    ) Stones: 
    input(
     type="number"
     name="txtStones"
     id="txtStones"
     minlength:1
    )
   
   div
    label(
     for="txtPounds"
    ) Pounds: 
    input(
     type="number"
     id="txtPounds"
     name="txtPounds"
     minlength:1
    )
   
   input(
    type="hidden"
    name="txtTrackerID"
    value="#{wid}"
   )
   input(
    class="weightFormButton"
    type="Submit"
    value="SUBMIT"
   )
   input(
    class="weightFormButton"
    type="reset"
    value="RESET"
   )
